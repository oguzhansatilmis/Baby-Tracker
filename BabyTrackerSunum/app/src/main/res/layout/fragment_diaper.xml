<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.DiaperFragment">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline57"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline58"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05607476635" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline59"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.945" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline61"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.19689787" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline62"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.23" />

    <ImageView
        android:id="@+id/diaper_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_back"
        app:layout_constraintBottom_toBottomOf="@id/guideline57"
        app:layout_constraintStart_toStartOf="@id/guideline57"
        app:layout_constraintTop_toTopOf="@id/guideline57" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineHeight="40.5dp"
        android:text="Diaper Change"
        android:textColor="#4625C3"
        android:textFontWeight="1000"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/guideline57"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline57" />

    <View
        android:id="@+id/diaper_time_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rectangle_1"
        app:layout_constraintBottom_toBottomOf="@id/guideline61"
        app:layout_constraintEnd_toEndOf="@id/guideline59"
        app:layout_constraintStart_toStartOf="@id/guideline58"
        app:layout_constraintTop_toTopOf="@id/guideline60">

    </View>

    <TextView
        android:id="@+id/diaper_time_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/poppins"
        android:hint="Time"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:textColorHint="@color/edittextcolor"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@id/diaper_time_view"
        app:layout_constraintEnd_toEndOf="@id/guideline59"
        app:layout_constraintStart_toStartOf="@id/guideline58"
        app:layout_constraintTop_toTopOf="@id/diaper_time_view" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline63"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:paddingLeft="20dp"
        android:text="Diaper Status"
        android:textColor="@color/black"
        android:textFontWeight="1000"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline62"
        app:layout_constraintStart_toStartOf="@id/guideline58"
        app:layout_constraintTop_toTopOf="@id/guideline62" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline64"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.262" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.105" />

    <ImageView
        android:id="@+id/image_wet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_wet_unselected"
        app:layout_constraintEnd_toEndOf="@id/guideline66"
        app:layout_constraintStart_toStartOf="@id/guideline66"
        app:layout_constraintTop_toTopOf="@id/guideline64" />

    <TextView
        android:id="@+id/status_wet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wet"
        app:layout_constraintBottom_toBottomOf="@+id/image_wet"
        app:layout_constraintStart_toStartOf="@id/guideline68"
        app:layout_constraintTop_toTopOf="@id/image_wet" />

    <ImageView
        android:id="@+id/image_dirty"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/icon_dirty_unselected"
        app:layout_constraintEnd_toEndOf="@id/guideline66"
        app:layout_constraintStart_toStartOf="@id/guideline66"
        app:layout_constraintTop_toTopOf="@id/guideline67" />

    <TextView
        android:id="@+id/status_dirty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dirty"
        app:layout_constraintBottom_toBottomOf="@+id/image_dirty"
        app:layout_constraintStart_toStartOf="@id/guideline68"
        app:layout_constraintTop_toTopOf="@id/image_dirty" />

    <ImageView
        android:id="@+id/image_mixed"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/icon_mixed_unselected"
        app:layout_constraintStart_toStartOf="@id/image_wet"
        app:layout_constraintTop_toTopOf="@id/guideline69" />

    <TextView
        android:id="@+id/status_mixed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mixed"
        app:layout_constraintBottom_toBottomOf="@+id/image_mixed"
        app:layout_constraintStart_toStartOf="@id/guideline68"
        app:layout_constraintTop_toTopOf="@id/image_mixed" />

    <ImageView
        android:id="@+id/image_dry"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/icon_dry_unselected"
        app:layout_constraintEnd_toStartOf="@id/guideline66"
        app:layout_constraintStart_toStartOf="@id/guideline66"
        app:layout_constraintTop_toTopOf="@id/guideline70" />

    <TextView
        android:id="@+id/stat_dry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dry"
        app:layout_constraintBottom_toBottomOf="@id/image_dry"
        app:layout_constraintStart_toStartOf="@id/guideline68"
        app:layout_constraintTop_toTopOf="@id/image_dry" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline67"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30639732" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline68"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline69"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35129067" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.39842874" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline71"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.79" />

    <View
        android:id="@+id/view12"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rectangle11"
        app:layout_constraintBottom_toBottomOf="@id/guideline71"
        app:layout_constraintEnd_toEndOf="@id/guideline59"
        app:layout_constraintStart_toStartOf="@id/guideline58"
        app:layout_constraintTop_toTopOf="@id/guideline63">

    </View>

    <EditText
        android:id="@+id/dipaer_note"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@null"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:gravity="start"
        android:hint="Note"
        android:inputType="textPersonName"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:textColorHint="@color/edittextcolor"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@id/view12"
        app:layout_constraintEnd_toEndOf="@id/guideline59"
        app:layout_constraintStart_toStartOf="@id/guideline58"
        app:layout_constraintTop_toTopOf="@id/view12" />

    <View
        android:id="@+id/dipaer_next_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/nextbutton"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline115"
        app:layout_constraintEnd_toEndOf="@id/guideline59"
        app:layout_constraintStart_toStartOf="@id/guideline58"
        app:layout_constraintTop_toTopOf="@id/guideline114">

    </View>

    <TextView
        android:id="@+id/save_diaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:fontFamily="@font/poppins"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/guideline115"
        app:layout_constraintEnd_toEndOf="@id/guideline59"
        app:layout_constraintStart_toStartOf="@id/guideline58"
        app:layout_constraintTop_toTopOf="@id/guideline114">

    </TextView>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline114"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.86756456" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline115"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9292929" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline140"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4298541" />


</androidx.constraintlayout.widget.ConstraintLayout>